@model ProyectoFinal.Models.Usuarios

@{
    Layout = null;
}

<!DOCTYPE html>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Editar</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .form-container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 5px;
            background-color: #f9f9f9;
        }

            .form-container h4 {
                margin-bottom: 20px;
            }

        .form-group {
            margin-bottom: 15px;
        }
    </style>
</head>
<body>
    <div class="container my-4">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-container">
                <h4>Edit User</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.id_usuario)

                <div class="form-group row">
                    @Html.LabelFor(model => model.codigoUsuario, htmlAttributes: new { @class = "col-md-4 col-form-label" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.codigoUsuario, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.codigoUsuario, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.nombreUsuario, htmlAttributes: new { @class = "col-md-4 col-form-label" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.nombreUsuario, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.nombreUsuario, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.password, htmlAttributes: new { @class = "col-md-4 col-form-label" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.ultimaFechaConexion, htmlAttributes: new { @class = "col-md-4 col-form-label" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.ultimaFechaConexion, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ultimaFechaConexion, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.estadoUsuario, htmlAttributes: new { @class = "col-md-4 col-form-label" })
                    <div class="col-md-8">
                        <div class="form-check">
                            @Html.EditorFor(model => model.estadoUsuario, new { htmlAttributes = new { @class = "form-check-input" } })
                            @Html.LabelFor(model => model.estadoUsuario, htmlAttributes: new { @class = "form-check-label" })
                            @Html.ValidationMessageFor(model => model.estadoUsuario, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="btn-group d-flex justify-content-between">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        }
    </div>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
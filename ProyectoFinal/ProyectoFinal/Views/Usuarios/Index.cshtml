@model IEnumerable<ProyectoFinal.Models.Usuarios>

@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!-- Add Bootstrap CSS for styling -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .table th, .table td {
            text-align: center;
        }

        .table th {
            background-color: #f8f9fa;
        }

        .table td {
            vertical-align: middle;
        }

        .btn-group {
            display: flex;
            justify-content: center;
        }
    </style>
</head>
<body>
    <div class="container my-4">
        <h2 class="mb-4">User List</h2>
        <p>
            <a href="@Url.Action("Create")" class="btn btn-primary">Create New User</a>
        </p>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>User Code</th>
                    <th>Full Name</th>
                    <th>Password</th>
                    <th>Last Login Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.codigoUsuario)</td>
                        <td>@Html.DisplayFor(modelItem => item.nombreUsuario)</td>
                        <td>@Html.DisplayFor(modelItem => item.password)</td>
                        <td>@Html.DisplayFor(modelItem => item.ultimaFechaConexion)</td>
                        <td>
                            @if (item.estadoUsuario)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group">
                                @Html.ActionLink("Edit", "Edit", new { id = item.id_usuario }, new { @class = "btn btn-warning btn-sm" })
                                @Html.ActionLink("Details", "Details", new { id = item.id_usuario }, new { @class = "btn btn-info btn-sm" })
                                @Html.ActionLink(
                                    item.estadoUsuario ? "Deactivate" : "Activate",
                                    "ToggleStatus",
                                    new { id = item.id_usuario },
                                    new { @class = item.estadoUsuario ? "btn btn-danger btn-sm" : "btn btn-success btn-sm" }
                                )
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>


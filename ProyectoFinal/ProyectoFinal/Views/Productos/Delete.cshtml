@model ProyectoFinal.Models.Productos

@{
    ViewBag.Title = "Eliminar Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="form-container">
        <h3>¿Estás seguro de que deseas eliminar este producto?</h3>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>@Html.DisplayNameFor(model => model.codigoProducto)</dt>
                <dd>@Html.DisplayFor(model => model.codigoProducto)</dd>

                <dt>@Html.DisplayNameFor(model => model.nombreProducto)</dt>
                <dd>@Html.DisplayFor(model => model.nombreProducto)</dd>

                <dt>@Html.DisplayNameFor(model => model.descripcion)</dt>
                <dd>@Html.DisplayFor(model => model.descripcion)</dd>

                <dt>@Html.DisplayNameFor(model => model.precioProducto)</dt>
                <dd>₡@Html.DisplayFor(model => model.precioProducto)</dd>

                <dt>@Html.DisplayNameFor(model => model.disponibilidadInventario)</dt>
                <dd>@Html.DisplayFor(model => model.disponibilidadInventario)</dd>

                <dt>@Html.DisplayNameFor(model => model.imagenAlmacenada)</dt>
                <dd>
                    <img src="@Url.Content(Model.imagenAlmacenada)" alt="Vista previa de la imagen" class="img-preview" />
                </dd>

                <dt>@Html.DisplayNameFor(model => model.estadoProducto)</dt>
                <dd>@Html.DisplayFor(model => model.estadoProducto)</dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="btn-group">
                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Volver a la Lista</a>
                </div>
            }
        </div>
    </div>
</body>
</html>

<style>
    .form-container {
        max-width: 600px;
        margin: 50px auto;
        padding: 30px;
        border: 1px solid #dc3545;
        border-radius: 10px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        .form-container h3 {
            margin-bottom: 20px;
            color: #dc3545;
            text-align: center;
        }

        .form-container h4 {
            color: #333;
            text-align: center;
        }

        .form-container dt, .form-container dd {
            margin-bottom: 10px;
            font-size: 16px;
        }

    .img-preview {
        display: block;
        margin: 20px auto;
        max-width: 200px;
        height: auto;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .btn-group {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        font-size: 16px;
        padding: 10px 20px;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        font-size: 16px;
        padding: 10px 20px;
    }

    .btn:hover {
        opacity: 0.9;
    }
</style>
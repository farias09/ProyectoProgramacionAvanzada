@model ProyectoFinal.Models.Productos

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Detalles de Producto</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .product-details-container {
            max-width: 900px;
            margin: 50px auto;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }

        .product-header {
            text-align: center;
            margin-bottom: 30px;
        }

            .product-header h4 {
                font-size: 24px;
                color: #333;
            }

        .product-info-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            grid-gap: 20px;
            align-items: start;
        }

            .product-info-grid dt {
                font-weight: bold;
                color: #555;
            }

            .product-info-grid dd {
                margin: 0 0 20px;
                color: #333;
            }

            .product-info-grid img {
                max-width: 100%;
                height: auto;
                border-radius: 10px;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            }

        .actions {
            text-align: center;
            margin-top: 30px;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            color: #fff;
            padding: 10px 20px;
            border-radius: 5px;
            transition: background-color 0.3s ease, border-color 0.3s ease;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
            color: #fff;
            padding: 10px 20px;
            border-radius: 5px;
            transition: background-color 0.3s ease, border-color 0.3s ease;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="product-details-container">
            <div class="product-header">
                <h4>Detalles de Producto</h4>
                <hr />
            </div>
            <div class="product-info-grid">
                <div>
                    <dt>@Html.DisplayNameFor(model => model.codigoProducto)</dt>
                    <dd>@Html.DisplayFor(model => model.codigoProducto)</dd>

                    <dt>@Html.DisplayNameFor(model => model.nombreProducto)</dt>
                    <dd>@Html.DisplayFor(model => model.nombreProducto)</dd>

                    <dt>@Html.DisplayNameFor(model => model.descripcion)</dt>
                    <dd>@Html.DisplayFor(model => model.descripcion)</dd>

                    <dt>@Html.DisplayNameFor(model => model.precioProducto)</dt>
                    <dd>₡@Html.DisplayFor(model => model.precioProducto)</dd>
                </div>
                <div>
                    <dt>@Html.DisplayNameFor(model => model.disponibilidadInventario)</dt>
                    <dd>@Html.DisplayFor(model => model.disponibilidadInventario)</dd>

                    <dt>@Html.DisplayNameFor(model => model.imagenAlmacenada)</dt>
                    <dd>
                        <img src="@Url.Content(Model.imagenAlmacenada)" alt="Product Image" />
                    </dd>

                    <dt>@Html.DisplayNameFor(model => model.estadoProducto)</dt>
                    <dd>@Html.DisplayFor(model => model.estadoProducto)</dd>
                </div>
            </div>
            <div class="actions">
                @Html.ActionLink("Editar", "Edit", new { id = Model.id_producto }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Volver a la Lista", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>
</body>
</html>
